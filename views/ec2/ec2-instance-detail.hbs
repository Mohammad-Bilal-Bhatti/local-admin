
<h2>Instance Details - {{instanceId}} - <span class="badge rounded-pill bg-{{lookup instanceStateColorMapping instance.State.Name}} text-capitalize">{{instance.State.Name}}</span></h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Attribute</th>
            <th scope="col">Value</th>
        </tr>
    </thead>
    <tbody>
        {{#each instance}}
        <tr>
            <th>{{@key}}</th>
            <td>{{{printKeyValue this}}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>